{
  "name":                     "Official Media Bias/Fact Check Extension",
  "short_name":               "MBFCext",
  "author":                   "Mike Crowe",
  "version":                  "1.0.13",
  "manifest_version":         2,
  "description":              "Update Facebook with MBFC news categorizations",
  "content_security_policy":  "script-src 'self' https://www.google-analytics.com; object-src 'self'",
  "default_locale":           "en",
  "background":               {
    "scripts": [
      "src/bg/background.js"
    ]
  },
  "icons":                    {
    "48":  "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions":              [
    "*://*.facebook.com/*",
    "background",
    "storage"
  ],
  "options_ui":               {
    "page":         "options.html",
    "chrome_style": true
  },
  "content_scripts":          [
    {
      "matches": [
        "*://*.facebook.com/*"
      ],
      "run_at":  "document_start",
      "js":      [
        "src/inject/facebook_filter.js"
      ],
      "css":     [
        "css/font-awesome-4.6.3/css/font-awesome.min.css",
        "src/inject/inject.css"
      ]
    }
  ],
  "web_accessible_resources": [
    "data.json",
    "css/font-awesome-4.6.3/fonts/*",
    "images/*"
  ]
}